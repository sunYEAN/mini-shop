/* pages/index/components/Brand/index.wxss */
.brand-list{
  text-align: center;
  border-top: 20rpx solid #f4f4f4;
  background: #ededed;
}

.brand-list > .title {
  color: #333;
  display: block;
  padding: 46rpx 0;
  font-size: 32rpx;
  background-color: #ffffff;
}
.brand-list > .brands {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.brand-list > .brands > .brand-item{
  width: 50%;
  height: 252rpx;
  position: relative;
  box-sizing: border-box;
}

.brand-list > .brands > .brand-item:nth-of-type(odd){
  border-right: 1rpx solid #ffffff; 
}

.brand-list > .brands > .brand-item:nth-of-type(n+3){
  border-top: 1rpx solid #fff; 
}


.brand-list > .brands > .brand-item .mask{
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  padding: 30rpx;
  display: flex;
  position: absolute;
  box-sizing: border-box;
  align-items: flex-start;
  flex-direction: column;
  justify-content: flex-start;
}

.brand-list > .brands > .brand-item .mask > text:nth-of-type(1){
  font-size: 32rpx;
}


.brand-list > .brands > .brand-item .mask > text:nth-of-type(2){
  color: #999;
  font-size: 26rpx;
}

.brand-list > .brands > .brand-item image{
  width: 100%;
  height: 252rpx;
  object-fit: cover;
}