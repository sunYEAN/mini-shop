/* pages/index/components/NavBars/index.wxss */
.menu{
  display: flex;
  padding: 30rpx 0;
  justify-content: space-around;
}
.menu .item {
  flex: 1;
  padding: 30rpx 0;
}

.menu image {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
  display: block;
  border-radius: 50%;
  margin-bottom: 12rpx;
}

.menu text {
  color: #333;
  margin: 10rpx auto;
  display: block;
  font-size: 24rpx;
  text-align: center;
  line-height: 1;
}