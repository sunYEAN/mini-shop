/* pages/index/components/Search.wxss */
.search {
  width: 100%;
  height: 88rpx;
  display: flex;
  padding: 0 20rpx;
  box-sizing: border-box;
  background: #fff;
  align-items: center;
}

.search .input {
  flex: 1;
  height: 56rpx;
  display: flex;
  background: #f4f4f4;
  align-items: center;
  border-radius: 28rpx;
  justify-content: center;
}

.search .icon {
  background: url(https://source.mnnuu.cn/websources/mini-program/search.png) center no-repeat;
  background-size: 100%;
  width: 28rpx;
  height: 28rpx;
}

.search .txt {
  color: #999;
  height: 42rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  padding-left: 10rpx;
}